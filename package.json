{
  "name": "streaming-service-launcher",
  "version": "0.1.3",
  "description": "Simple Launcher for streaming services",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder",
    "build:flatpak": "flatpak-builder --force-clean build-dir flatpak/com.aarron_lee.StreamingServiceLauncher.json",
    "build:flatpak-bundle": "flatpak-builder --repo=repo --force-clean build-dir flatpak/com.aarron_lee.StreamingServiceLauncher.json && flatpak build-bundle repo StreamingServiceLauncher_v${npm_package_version}.flatpak com.aarron_lee.StreamingServiceLauncher"
  },
  "build": {
    "appId": "com.xxjsonderuloxx.streaming-service-launcher",
    "productName": "StreamingServiceLauncher",
    "electronDownload": {
      "mirror": "https://github.com/castlabs/electron-releases/releases/download/v"
    },
    "files": [
      "index.js",
      "package.json",
      "services.json",
      "js/*",
      "index.html",
      "preload.js"
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "artifactName": "${productName}_v${version}_linux.${ext}",
      "category": "Utility"
    }
  },
  "keywords": [],
  "author": "xxjsonderuloxx",
  "license": "MIT",
  "devDependencies": {
    "electron": "github:castlabs/electron-releases#v36.0.0+wvcus",
    "electron-builder": "^26.0.12"
  },
  "packageManager": "pnpm@8.15.4+sha1.c85a4305534f76d461407b59277b954bac97b5c4"
}
